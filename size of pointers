#include <stdio.h>
#include <iostream>
using namespace std;
void fun(int A[ ]){
    cout<<sizeof(A)/sizeof(int)<<endl; //here ans is 2 coz size of pointer is fixed i.e 8 bytes terefore 8/4=2
}

int main()
{
   int A[]= {2,4,6,8,10};
   int n=5;
   fun(A);
    cout<<sizeof(A)/sizeof(int);// ans is 5 coz 20/4=5
   return 0;
}
